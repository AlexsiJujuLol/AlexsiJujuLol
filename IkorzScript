local Library = loadstring(game:HttpGet('https://raw.githubusercontent.com/LuauCloud/Byte/refs/heads/main/Utils/Library.lua'))()

local Library_Window = Library.Add_Window('Acceptions')

-- Create a Tab for "Blatant"
local Blatant_Tab = Library_Window.Create_Tab({
    name = 'Blatant',
    icon = 'rbxassetid://'
})

local Blatant_Section = Blatant_Tab.Create_Section()
local Auto_Parry = Blatant_Section.Create_DropToggle({
    name = 'Auto Parry',
    section = 'left',
    flag = 'Auto_Parry',
    options = {'Custom', 'Random', 'Backwards'},
    callback = function(state)
        if state then
           print('Auto Parry enabled')
        else
           print('Auto Parry disabled')
        end
    end,
    callback2 = function(selected)
        print('Selected:', selected)
    end
})

-- Create a Tab for "Fisch"
local Fisch_Tab = Library_Window.Create_Tab({
    name = 'Fisch',
    icon = 'rbxassetid://'
})

local Fisch_Section = Fisch_Tab.Create_Section()

-- Define delays for each action
local shakeDelay = 2
local castDelay = 5
local baitDelay = 10
local reelDelay = 3
local equipRodDelay = 1

-- Helper function for delayed actions
local function delayAction(func, delayTime)
    local lastAction = 0
    return function()
        local currentTime = tick()
        if currentTime - lastAction >= delayTime then
            func()
            lastAction = currentTime
        end
    end
end

-- Auto Shake Toggle
local Auto_Shake = Fisch_Section.Create_Toggle({
    name = 'Auto Shake',
    flag = 'Auto_Shake',
    callback = function(state)
        if state then
            print('Auto Shake activated')
            StartAutoShake()
        else
            print('Auto Shake deactivated')
            StopAutoShake()
        end
    end
})

-- Auto Cast Toggle
local Auto_Cast = Fisch_Section.Create_Toggle({
    name = 'Auto Cast',
    flag = 'Auto_Cast',
    callback = function(state)
        if state then
            print('Auto Cast activated')
            StartAutoCast()
        else
            print('Auto Cast deactivated')
            StopAutoCast()
        end
    end
})

-- Auto Bait Toggle
local Auto_Bait = Fisch_Section.Create_Toggle({
    name = 'Auto Bait',
    flag = 'Auto_Bait',
    callback = function(state)
        if state then
            print('Auto Bait activated')
            StartAutoBait()
        else
            print('Auto Bait deactivated')
            StopAutoBait()
        end
    end
})

-- Auto Reel Toggle
local Auto_Reel = Fisch_Section.Create_Toggle({
    name = 'Auto Reel',
    flag = 'Auto_Reel',
    callback = function(state)
        if state then
            print('Auto Reel activated')
            StartAutoReel()
        else
            print('Auto Reel deactivated')
            StopAutoReel()
        end
    end
})

-- Auto Equip Rod Toggle
local Auto_Equip_Rod = Fisch_Section.Create_Toggle({
    name = 'Auto Equip Rod',
    flag = 'Auto_Equip_Rod',
    callback = function(state)
        if state then
            print('Auto Equip Rod activated')
            StartAutoEquipRod()
        else
            print('Auto Equip Rod deactivated')
            StopAutoEquipRod()
        end
    end
})

-- Auto Shake
local shaking = false
function StartAutoShake()
    if not shaking then
        shaking = true
        local shakeWithDelay = delayAction(function()
            print("Shaking the rod...")
            -- Put the actual shake logic here
        end, shakeDelay)
        while shaking do
            shakeWithDelay()
            wait(0.1)  -- Run the delay check in small intervals
        end
    end
end

function StopAutoShake()
    shaking = false
    print("Shaking stopped.")
end

-- Auto Cast
local casting = false
function StartAutoCast()
    if not casting then
        casting = true
        local castWithDelay = delayAction(function()
            print("Casting the rod...")
            -- Put the actual cast logic here
        end, castDelay)
        while casting do
            castWithDelay()
            wait(0.1)
        end
    end
end

function StopAutoCast()
    casting = false
    print("Casting stopped.")
end

-- Auto Bait
local baiting = false
function StartAutoBait()
    if not baiting then
        baiting = true
        local baitWithDelay = delayAction(function()
            print("Selecting bait...")
            -- Put the actual baiting logic here
        end, baitDelay)
        while baiting do
            baitWithDelay()
            wait(0.1)
        end
    end
end

function StopAutoBait()
    baiting = false
    print("Baiting stopped.")
end

-- Auto Reel
local reeling = false
function StartAutoReel()
    if not reeling then
        reeling = true
        local reelWithDelay = delayAction(function()
            print("Reeling in the fish...")
            -- Put the actual reeling logic here
        end, reelDelay)
        while reeling do
            reelWithDelay()
            wait(0.1)
        end
    end
end

function StopAutoReel()
    reeling = false
    print("Reeling stopped.")
end

-- Auto Equip Rod
local rodEquipped = false
function StartAutoEquipRod()
    if not rodEquipped then
        rodEquipped = true
        print("Equipping the rod...")
        -- Put the actual logic for equipping the rod here
        wait(equipRodDelay)
    end
end

function StopAutoEquipRod()
    rodEquipped = false
    print("Rod equip stopped.")
end
